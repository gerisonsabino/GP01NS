<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="language" content="pt-br" />

    @if (!string.IsNullOrEmpty(ViewBag.Description))
    {
        <meta name="description" content="@ViewBag.Description" />

        <meta property="og:locale" content="pt_BR">
        <meta property="og:url" content="@HttpContext.Current.Request.Url.AbsoluteUri">
        <meta property="og:title" content="@ViewBag.Title">
        <meta property="og:site_name" content="Nosso Show">
        <meta property="og:description" content="@ViewBag.Description">
        <meta property="og:image" content="@ViewBag.Image">
        <meta property="og:type" content="website">
    }

    <link href="~/Imagens/favicon.ico" rel="icon" type="image/x-icon">
    <meta name="keywords" content="" />
    <meta name="robots" content="index,follow,noimageindex" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="author" content="Grupo 01">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @*SCRIPTS*@
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/Scripts/Views/entrar/Cadastro/validation_controller.js"></script>
    <script src="~/Scripts/Plugins/datepicker-plugin/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/Plugins/datepicker-plugin/js/bootstrap-datepicker.pt-BR.js"></script>
    <script src="~/Scripts/Plugins/inputmask-plugin/jquery.inputmask.bundle.js"></script>
    <script src="~/Scripts/nota.js"></script>
    <script src="~/Scripts/Views/Layout/layout.js"></script>

    @*PLUGINS*@
    <script src="~/Plugins/Select2/js/select2.full.min.js"></script>
    <link href="~/Plugins/Select2/css/select2.css" rel="stylesheet" />

    @*CSS*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" type="text/css" />
    <link href="~/CSS/icons-open-iconic-master/font/css/open-iconic-bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet">
    <link href="~/CSS/Views/layout.css" rel="stylesheet" />
    @if (ViewBag.Title != "Nosso Show")
    {
        <title>@ViewBag.Title | Nosso Show</title>
    }
    else
    {
        <title>@ViewBag.Title</title>
    }
</head>
<body>
	@RenderPage("Parciais/Header.cshtml")
	<main class="mx-auto">
		@RenderBody()
	</main>
	@RenderPage("Parciais/Footer.cshtml")
</body>
</html>