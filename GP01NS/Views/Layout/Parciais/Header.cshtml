@{ 
    var Conta = (GP01NS.Models.usuario)ViewBag.BaseUsuario;
}

<header>
    <div class="text-center logo"></div>
    @if (Conta != null)
    {
        switch (Conta.Tipo)
        {
            case 1:
                @RenderPage("~/Views/Layout/Parciais/Menu/Administrador.cshtml");
                break;

            case 2:
                @RenderPage("~/Views/Layout/Parciais/Menu/Estabelecimento.cshtml");
                break;

            case 3:
                @RenderPage("~/Views/Layout/Parciais/Menu/Fa.cshtml");
                break;

            case 4:
                @RenderPage("~/Views/Layout/Parciais/Menu/Musico.cshtml");
                break;
        }
    }
    else
    {
        <nav class="navbar navbar-expand-lg">
            <div class="navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="caixa-menu nav-link dropdown" href="javascript:void(0);" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/Imagens/Views/menu.svg" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            <li class="nav-item">
                                <ul>
                                    <h1>Home</h1>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/inicio/">Início</a>
                                    </li>
                                    <h1>Login</h1>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/entrar/">Entrar</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    }
</header>