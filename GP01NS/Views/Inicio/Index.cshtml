@model GP01NS.Classes.ViewModels.UsuarioVM

@{
    ViewBag.Description = "Descubra eventos próximo a você, encontre estabelecimentos com ambientação para qualquer ocasião e conheça novos artistas dos seu(s) genêro(s) favorito(s).";
    ViewBag.Image = "http://nossoshow.gerison.net/Imagens/card-logo.png";

    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="language" content="pt-br" />

    @if (!string.IsNullOrEmpty(ViewBag.Description))
    {
        <meta name="description" content="@ViewBag.Description" />

        <meta property="og:locale" content="pt_BR">
        <meta property="og:url" content="@HttpContext.Current.Request.Url.AbsoluteUri">
        <meta property="og:title" content="@ViewBag.Title">
        <meta property="og:site_name" content="Nosso Show">
        <meta property="og:description" content="@ViewBag.Description">
        <meta property="og:image" content="@ViewBag.Image">
        <meta property="og:type" content="website">
    }

    <link href="~/Imagens/favicon.ico" rel="icon" type="image/x-icon">
    <meta name="keywords" content="" />
    <meta name="robots" content="index,follow,noimageindex" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="author" content="Grupo 01">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/CSS/Views/Inicio/index.css" rel="stylesheet" />


    <title>Nosso Show</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 cabeca">
                <header class="cabecalho">
                    <img src="~/Imagens/Views/Inicio/002-logo.svg" alt="">
                    <a href="/entrar/" class="link btn-ent float-right fonteMilk">entrar</a>
                </header>
                <section class="conteudo">
                    <h1 class="fonteMilk" style="margin-top:5%;">
                        Frequente estabelecimentos,<br>
                        encontre músicos,<br>
                        divirta-se.
                    </h1>
                </section>
                <section class="conteudo">
                    <div class="detalhe float-left"></div>
                    <p class="fonteHumnst" style="font-size:22px;">Transforme momentos em história, participe de eventos no Nosso Show.</p>
                </section>
                <section class="conteudo" style="padding-top:100px;">
                    <a href="/inicio/buscar/" class="link btn-at fonteMilk ">PROCURAR EVENTO</a>
                </section>
            </div>
            <footer class="col-md-12">
                <section class="footer-conteudo">
                    <nav class="fonteHumnst float-left">
                        <ul>
                            <li><a href="#" class="a">Sobre nós</a></li>
                            <li><a href="#" class="a">Ajuda</a></li>
                            <li><a href="#" class="a">Termos e Privacidade</a></li>
                        </ul>
                    </nav>
                    <img class="float-right" src="~/Imagens/Views/Inicio/logo.png" alt="">
                </section>
            </footer>
        </div>
    </div>
</body>
</html>