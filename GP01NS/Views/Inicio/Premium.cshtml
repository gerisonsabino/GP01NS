@model GP01NS.Classes.Servicos.Pagamento

@{
    ViewBag.Title = "Premium";
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="language" content="pt-br" />

    @if (!string.IsNullOrEmpty(ViewBag.Description))
    {
        <meta name="description" content="@ViewBag.Description" />

        <meta property="og:locale" content="pt_BR">
        <meta property="og:url" content="@HttpContext.Current.Request.Url.AbsoluteUri">
        <meta property="og:title" content="@ViewBag.Title">
        <meta property="og:site_name" content="Nosso Show">
        <meta property="og:description" content="@ViewBag.Description">
        <meta property="og:image" content="@ViewBag.Image">
        <meta property="og:type" content="website">
    }

    <link href="~/Imagens/favicon.ico" rel="icon" type="image/x-icon">
    <meta name="keywords" content="" />
    <meta name="robots" content="index,follow,noimageindex" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="author" content="Grupo 01">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/CSS/Views/Inicio/index.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <title>Nosso Show</title>
</head>
<body>
    <div class="modal fade" id="modal-transacao" tabindex="-1" role="dialog" aria-labelledby="modal-transacao" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">
                        <strong>Transação - @Model.REF</strong>
                    </h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table w-100">
                        <tbody>
                            <tr>
                                <th>Perfil: </th>
                                <td>@("@" + Model.Usuario.Username)</td>
                            </tr>
                            <tr>
                                <th>Nome: </th>
                                <td>@Model.Usuario.Nome</td>
                            </tr>
                            <tr>
                                <th>Data: </th>
                                <td>@Model.Data</td>
                            </tr>
                            <tr>
                                <th>Pagamento: </th>
                                <td>@Model.DtPagamento</td>
                            </tr>
                            <tr>
                                <th>Vencimento: </th>
                                <td>@Model.Vencimento</td>
                            </tr>
                            <tr>
                                <th>Valor: </th>
                                <td>@Model.Valor.ToString("C")</td>
                            </tr>
                            <tr>
                                <th>Status: </th>
                                <td>@(Model.Aprovado ? "Aprovado" : "Pendente")</td>
                            </tr>
                            <tr>
                                <th>REF: </th>
                                <td>@Model.REF</td>
                            </tr>
                            <tr>
                                <th>PagSeguro: </th>
                                <td>@Model.Transacao</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 cabeca">
                <header class="cabecalho">
                    <img src="~/Imagens/Views/logo-marca.svg" alt="" class="logoTopo">
                </header>
                <section class="conteudo">
                    <h1 class="fonteMilk">Bem-vindo(a) ao Premium.</h1>
                </section>
                <section class="conteudo">
                    <div class="detalhe float-left"></div>
                    <p class="fonteHumnst" style="font-size:22px; max-width: 1000px;"><strong>Seu pagamento está APROVADO.</strong> Obrigado!<br />Atualizamos seu perfil e você já está obtendo as vantagens de uma conta <span class="badge badge-warning font-weight-bold">Premium</span>.</p>
                </section>
                <section class="conteudo">
                    <a href="/inicio/@(Model.Usuario.Tipo == 4 ? "musico" : "estabelecimento")/@Model.Usuario.Username" class="link btn-at fonteMilk">Ver perfil</a>
                    <button class="link btn-at fonteMilk" style="border: none !important; cursor: pointer;" data-toggle="modal" data-target="#modal-transacao">Detalhes da Transação</button>
                </section>
            </div>
            <footer class="col-md-12">
                <section class="footer-conteudo">
                    <nav class="fonteHumnst">
                        <ul>
                            <li><a href="#" class="a">Sobre nós</a></li>
                            <li><a href="#" class="a">Ajuda</a></li>
                            <li><a href="#" class="a">Termos e Privacidade</a></li>
                        </ul>
                    </nav>
                    <img class="float-right logoFooter" src="~/Imagens/Views/inicio/logo.png" alt="">                    
                </section>
            </footer>
        </div>
    </div>
</body>
</html>