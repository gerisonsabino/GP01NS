@{
    ViewBag.Title = "Entrar";
    Layout = "~/Views/entrar/Layout.cshtml";
}
<link href="~/CSS/assets/icons-open-iconic-master/font/css/open-iconic-bootstrap.css" rel="stylesheet">

<link href="~/CSS/Views/entrar/index.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-xl-3 img"></div>
        <div class="col-md-9 col-12 col-lg-9 ml-auto mr-auto form">
            <div class="col-md-7 ml-auto mr-auto">
                <h5>ENTRE NO NOSSO SHOW</h5>

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nome de Usuário ou E-mail</label>
                        <div class="input-campo">
                            <span class="oi oi-person"></span>
                            <input type="text" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="Nome de Usuário ou E-mail" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Senha</label>
                        <div class="input-campo">
                            <span class="oi oi-lock-locked"></span>
                            <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Senha" required="" />
                        </div>
                    </div>

                    if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Mensagem</strong>
                        </div>
                    }

                    if (!string.IsNullOrEmpty(ViewBag.Sucesso))
                    {
                        <div class="alert alert-success">
                            <strong>@ViewBag.Sucesso</strong>
                        </div>
                    }

                    <div class="form-group">
                        <a href="#" data-toggle="modal" data-target="#ExemploModalCentralizado">Esqueceu sua senha?</a>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">ENTRAR</button>
                    </div>
                }
            </div>
            <div class="form-group text-center conta">
                <a href="/entrar/cadastro/">Criar conta</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-uppercase">Recuperar senha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <br />
                <p class="display-5">Insira seu NOME DE USUÁRIO ou E-MAIL para redefinir seu acesso.</p>
                <br />
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nome de Usuário ou E-mail</label>
                        <div class="input-campo">
                            <span class="oi oi-person"></span>
                            <input type="text" class="form-control" id="Esqueci" name="Esqueci" aria-describedby="emailHelp" placeholder="Nome de Usuário ou E-mail" />
                        </div>
                    </div>
                    <div class="text-center form-group">
                        <button type="submit" class="btn btn-primary">SOLICITAR!</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/form_main.js"></script>