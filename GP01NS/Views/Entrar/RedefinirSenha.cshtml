@{
    ViewBag.Title = "Redefinir Senha";
    Layout = "~/Views/Layout/Entrar/Layout.cshtml";
}
<link href="~/CSS/Views/Entrar/cadastro.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-xl-3 img"></div>
        <div class="col-md-9 col-12 col-lg-9 ml-auto mr-auto form">
            <div class="col-md-7 ml-auto mr-auto">
                <br />
                <p class="display-5">NOS CAMPOS ABAIXO INFORME SUA NOVA SENHA</p>
                <hr />
                <br />
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div class="form-group">
                            <label for="senha">Senha</label>
                            <input type="password" class="form-control" id="senha" name="senha" aria-describedby="emailHelp" placeholder="Digite sua senha" required="" />
                            <div class="invalid-feedback">Informe a Senha!</div>
                        </div>
                        <div class="form-group">
                            <label for="confirmaSenha">Confirme sua senha</label>
                            <input type="password" class="form-control" id="confirmacao" name="confirmacao" aria-describedby="emailHelp" placeholder="Confirme sua senha"
                                   required="" />
                            <div class="invalid-feedback">As Senhas Não Conferem!</div>
                        </div>
                    </div>

                    if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                    {
                        <div class="alert alert-danger">
                            <strong>@ViewBag.Mensagem</strong>
                        </div>
                    }

                    if (!string.IsNullOrEmpty(ViewBag.Sucesso))
                    {
                        <div class="alert alert-success">
                            <strong>@ViewBag.Sucesso</strong>
                        </div>
                    }

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Cadastrar nova senha</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/form_main.js"></script>