@{
    ViewBag.Title = "Meus Eventos";
    Layout = "~/Views/Layout/Padrao/Layout.cshtml";
}

<!--STYLES-->
<link href="~/CSS/Views/Estabelecimento/evento.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/datatables.min.js"></script>

<div class="container-fluid">
    <h2>Eventos</h2>
    <br />
    <div class="table-responsive">
        <table class="table table-hover" id="tb-eventos"  data-page-length="50">
            <thead>
                <tr>
                    <th>#</th>
                    <th scope="col">Nome do Evento</th>
                    <th scope="col">Data</th>
                    <th scope="col">Status</th>
                    <th scope="col" width="50px">Opções</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center" colspan="5">Você ainda não possui eventos cadastrados. <a href="/estabelecimento/evento/">Clique aqui e adicione um novo evento.</a></td>
                </tr>
            </tbody>
        </table>
        @Html.Hidden("JSON")
    </div>
</div>

<script src="~/Scripts/Views/Estabelecimento/evento_table.js"></script>
